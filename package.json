{
  "name": "@uploadcare/uc-video",
  "version": "0.3.7-alpha.1",
  "description": "Uploadcare's UCVideo solution for adaptive bitrate streaming",
  "keywords": [
    "uploadcare",
    "uc-video",
    "component",
    "video-adaptive",
    "adaptive-video",
    "adaptive bitrate streaming",
    "hls",
    "html5"
  ],
  "private": false,
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": true,
  "type": "module",
  "main": "./dist/uc-video.umd.js",
  "module": "./dist/uc-video.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "browser": "./dist/uc-video.js",
      "import": "./dist/uc-video.js",
      "require": "./dist/uc-video.umd.js"
    },
    "./style": "./dist/uc-video.css",
    "./style.css": "./dist/uc-video.css",
    "./types/jsx": "./src/libs/types/jsx.d.ts",
    "./env": "./env.js"
  },
  "scripts": {
    "dev:client": "vite ",
    "dev": "vite build --watch",
    "build": "tsc && vite build",
    "build:types": "tsc --project tsconfig.types.json",
    "tsc": "tsc --project tsconfig.json",
    "preview": "vite preview",
    "lint": "biome check",
    "format": "biome format --write ./src",
    "release": "shipjs prepare",
    "prepare": "husky install",
    "clean:dist": "rimraf -g './dist'",
    "clean:types": "rimraf -g './src/libs/**/*.d.ts' && rimraf -g './src/libs/**/*.d.ts.map'",
    "clean": "run-s clean:*",
    "test": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.6",
    "husky": "^8.0.3",
    "lint-staged": "^15.4.3",
    "shipjs": "0.27.0",
    "typescript": "^5.5.3",
    "video.js": "^8.17.4",
    "vite": "^7.0.0",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "video.js": "^8"
  },
  "peerDependenciesMeta": {
    "video.js": {
      "optional": true
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uploadcare/uc-video.git"
  },
  "author": "Uploadcare Inc.",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/uploadcare/uc-video/issues"
  },
  "homepage": "https://github.com/uploadcare/uc-video#readme",
  "dependencies": {
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "vite-plugin-dts": "^4.5.4"
  }
}
